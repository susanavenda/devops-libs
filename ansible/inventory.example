# Example Ansible Inventory
# Copy to inventory.yml and customize

all:
  children:
    app_servers:
      hosts:
        app1:
          ansible_host: 192.168.1.10
          ansible_user: ubuntu
        app2:
          ansible_host: 192.168.1.11
          ansible_user: ubuntu

    docker_hosts:
      hosts:
        docker1:
          ansible_host: 192.168.1.20
          ansible_user: ubuntu
          docker_users:
            - ubuntu
            - deploy

    kubernetes_nodes:
      hosts:
        k8s-master:
          ansible_host: 192.168.1.30
          ansible_user: ubuntu
          node_type: master
        k8s-worker1:
          ansible_host: 192.168.1.31
          ansible_user: ubuntu
          node_type: worker
        k8s-worker2:
          ansible_host: 192.168.1.32
          ansible_user: ubuntu
          node_type: worker

  vars:
    ansible_ssh_common_args: '-o StrictHostKeyChecking=no'
    timezone: UTC
